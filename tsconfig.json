{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "removeComments": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}